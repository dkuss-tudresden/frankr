{
    "name": "catkin-workspace",
    "remoteUser": "root",
    "context": "../",
    "dockerFile": "../docker/Dockerfile",
    "extensions": [
        "ms-vscode.cpptools",
        "ms-iot.vscode-ros",
        "ms-python.python"
    ],
    "runArgs": [
        // This will allow you to use a ptrace-based debugger like C++, Go, and Rust.
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined",
    ],
}